        "def solution(num):\n",
        "    i = 0\n",
        "    if num == 1:\n",
        "        return 0\n",
        "    while True:\n",
        "        num = num/2 if num %2 == 0 else num*3+1\n",
        "        i +=1\n",
        "        if i == 500:\n",
        "            return -1\n",
        "        elif num == 1:\n",
        "            return i\n",
        "\n",
        "print(solution(6))\n",
        "print(solution(626331))\n",
        "print(solution(1))"
